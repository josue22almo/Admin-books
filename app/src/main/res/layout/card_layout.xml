<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_card">

            <!--ImageView
                android:id="@+id/book_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cercle"
                android:tag="@+id/viewTag"/>
            <!-Letter inside->
            <TextView
                android:id="@+id/book_photoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/book_photo"
                android:layout_alignTop="@+id/book_photo"
                android:layout_alignRight="@+id/book_photo"
                android:layout_alignBottom="@+id/book_photo"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@color/white" />
            <!-TITLE->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/book_title"
                android:textSize="@dimen/title_text_size"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/book_photo"
                android:layout_marginStart="14dp"
                android:color="@android:color/black"/>
            <!-AUTHOR->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/book_author"
                android:layout_below="@+id/book_title"
                android:layout_alignStart="@+id/book_title"
                android:textSize="@dimen/author_text_size"
                android:color="@android:color/black"/-->
            <ImageView
                android:id="@+id/book_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cercle"
                android:tag="@+id/viewTag"/>
            <!--Letter inside-->
            <TextView
                android:id="@+id/book_photoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/book_photo"
                android:layout_alignTop="@+id/book_photo"
                android:layout_alignRight="@+id/book_photo"
                android:layout_alignBottom="@+id/book_photo"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="T"
                android:textSize="30dp"
                android:textColor="@color/white" />
            <!--TITLE-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/book_title"
                android:textSize="@dimen/title_text_size"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/book_photo"
                android:text="TITLE"/>
            <!--AUTHOR-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/book_author"
                android:layout_below="@+id/book_title"
                android:layout_alignStart="@+id/book_title"
                android:textSize="@dimen/author_text_size"
                android:text="AUTHOR"
                android:color="@android:color/black"/>
            <!--CATEGORY-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/book_category"
                android:layout_below="@+id/book_author"
                android:layout_alignStart="@+id/book_title"
                android:text="SCIENCE FICTION"/>
            <!--YEAR-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/book_year"
                android:layout_below="@+id/book_category"
                android:layout_alignStart="@+id/book_title"
                android:text="9435"/>
            <!--PUBLISHER-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/book_publisher"
                android:text="PUBLISHER"
                android:layout_alignLeft="@+id/book_year"
                android:layout_below="@+id/book_category"
                android:layout_alignEnd="@+id/book_category" />
            <!--PERSONAL EVALUATION-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/book_evaluation"
                android:layout_below="@+id/book_year"
                android:maxLines="4"
                android:ellipsize="end"
                android:text="PERSONAL EVALUATION"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>